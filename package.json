{
  "name": "pad",
  "description": "Left and right string padding",
  "version": "3.2.0",
  "author": "David Worms <david@adaltas.com> (https://www.adaltas.com)",
  "contributors": [],
  "devDependencies": {
    "@types/mocha": "^10.0.8",
    "@types/node": "^22.7.4",
    "@types/should": "^13.0.0",
    "@types/wcwidth": "^1.0.2",
    "coffeescript": "^2.7.0",
    "husky": "^9.1.6",
    "mocha": "^10.7.3",
    "rollup": "^4.22.5",
    "rollup-plugin-commonjs": "^10.0.0",
    "rollup-plugin-node-resolve": "^5.0.0",
    "should": "^13.2.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2"
  },
  "dependencies": {
    "wcwidth": "^1.0.1"
  },
  "engines": {
    "node": ">= 4.0.0"
  },
  "homepage": "https://github.com/adaltas/node-pad",
  "keywords": [
    "pad",
    "string"
  ],
  "files": [
    "/dist"
  ],
  "license": "BSD-3-Clause",
  "main": "dist/pad.cjs.js",
  "mocha": {
    "inline-diffs": true,
    "loader": "ts-node/esm",
    "recursive": true,
    "reporter": "spec",
    "require": [
      "should"
    ],
    "throw-deprecation": false,
    "timeout": 40000
  },
  "module": "dist/pad.esm.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/adaltas/node-pad.git"
  },
  "scripts": {
    "build": "rollup -c && cp -p lib/index.d.ts dist/pad.d.ts",
    "preversion": "grep '## Trunk' CHANGELOG.md && npm test",
    "version": "version=`grep '^  \"version\": ' package.json | sed 's/.*\"\\([0-9\\.]*\\)\".*/\\1/'` && sed -i \"s/## Trunk/## Version $version/\" CHANGELOG.md && git add CHANGELOG.md",
    "postversion": "git push && git push --tags && npm publish",
    "patch": "npm version patch -m 'Bump to version %s'",
    "minor": "npm version minor -m 'Bump to version %s'",
    "major": "npm version major -m 'Bump to version %s'",
    "test": "mocha test/*.{js,ts}",
    "prepare": "husky install"
  },
  "types": "dist/pad.d.ts",
  "type": "module"
}
